<UserControl x:Class="FuelTracker.Controls.MemoryDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" >
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Image Margin="2" Source="/FuelTracker;component/Images/memory-icon-small.png" Stretch="None" />
            <TextBlock  x:Name="MemoryValueTextBlock" Margin="2" Text="0.00" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Text="KB allocated" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Button x:Name="CollectButton" Margin="2" Background="Transparent" BorderBrush="{x:Null}" ToolTipService.ToolTip="Collect memory">
                <Image Source="/FuelTracker;component/Images/trash-icon-small.png" Stretch="None" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
